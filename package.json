{
  "name": "siyuan-note",
  "displayName": "Siyuan-note",
  "description": "Manage notes on Visual Studio Code for Siyuan",
  "version": "0.1.1",
  "engines": {
    "vscode": "^1.100.0"
  },
  "categories": [
    "Other"
  ],
  "publisher": "Fadeness",
  "repository": {
    "type": "git",
    "url": "https://github.com/Fadeness/siyuan-note.git"
  },
  "type": "module",
  "activationEvents": [],
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "siyuan-note.publishNote",
        "title": "Siyuan Publish: Publish current editting note to Siyuan server"
      },
      {
        "command": "siyuan-note.newNote",
        "title": "Siyuan New: Create a new empty note with metadata template"
      }
    ],
    "configuration": [
      {
        "title": "Siyuan Note Configuration",
        "properties": {
          "siyuan-note.host": {
            "type": "string",
            "default": "127.0.0.1",
            "description": "Host of your Siyuan endpoint"
          },
          "siyuan-note.port": {
            "type": "string",
            "default": "6806",
            "description": "Port of your Siyuan endpoint"
          },
          "siyuan-note.token": {
            "type": "string",
            "description": "Your API token"
          }
        }
      }
    ],
    "keybindings": [
      {
        "command": "siyuan-note.newNote",
        "key": "alt+n"
      }
    ]
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src",
    "test": "vscode-test"
  },
  "devDependencies": {
    "@types/axios": "^0.14.4",
    "@types/mocha": "^10.0.10",
    "@types/node": "20.x",
    "@types/vscode": "^1.100.0",
    "@typescript-eslint/eslint-plugin": "^8.31.1",
    "@typescript-eslint/parser": "^8.31.1",
    "@vscode/test-cli": "^0.0.10",
    "@vscode/test-electron": "^2.5.2",
    "eslint": "^9.25.1",
    "typescript": "^5.8.3"
  },
  "dependencies": {
    "axios": "^1.9.0",
    "gray-matter": "^4.0.3"
  }
}
